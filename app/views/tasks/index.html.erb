<h1>Listing Tasks</h1>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li>
      <%= form_for(task, remote: true, format: :json) do |f| %>
        <%= f.check_box :completed, onchange: '$(this).submit()'  %>
        <%= task.title %>
      <% end %>

      <%= link_to 'Show', task_path(task), class: 'btn btn-default' %>
      <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-default' %>
      <%= link_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-task btn btn-default' %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Task', new_task_path %>
